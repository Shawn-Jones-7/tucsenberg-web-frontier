{
  "threshold": 0,
  "reporters": ["html", "console", "badge"],
  "ignore": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/node_modules/**",
    "**/.next/**",
    "**/build/**",
    "**/dist/**",
    "**/*.d.ts",
    "**/coverage/**",
    "**/emails/**",
    "**/__tests__/**",
    "**/scripts/**",
    "**/templates/**",
    "**/test/**",
    "**/testing/**",
    "src/app/api/**/route.ts",
    "src/app/**/page.tsx",
    "src/components/blocks/cta/**",
    "src/components/cta-section*.tsx",
    "src/components/home/cta/**",
    "src/components/home/*-skeleton.tsx",
    "src/components/trust/**",
    "src/components/ui/social-icons.tsx",
    "src/components/products/*-skeleton.tsx",
    "src/components/products/product-specs.tsx",
    "src/components/forms/**",
    "src/components/blog/blog-newsletter.tsx",
    "src/types/whatsapp-*.ts",
    "src/types/whatsapp-api-requests/**",
    "src/types/whatsapp-webhook-utils/**",
    "src/lib/whatsapp/**",
    "src/lib/whatsapp-*.ts",
    "src/lib/security/**",
    "src/lib/security-*.ts",
    "src/lib/structured-data*.ts",
    "src/lib/resend-core.tsx",
    "src/lib/idempotency.ts",
    "src/lib/content/*.ts",
    "src/lib/content-query/*.ts",
    "src/constants/test-*.ts"
  ],
  "gitignore": true,
  "minLines": 5,
  "minTokens": 50,
  "maxLines": 500,
  "maxSize": "30kb",
  "formatsExts": {
    "typescript": ["ts", "tsx"],
    "javascript": ["js", "jsx"]
  },
  "output": "./reports/jscpd",
  "absolute": true,
  "blame": false,
  "cache": true,
  "noSymlinks": true,
  "skipEmpty": true,
  "exitCode": 1
}
