{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    // 最严格的类型检查
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    // 最严格的代码质量检查 - 未使用变量检查交由ESLint统一处理
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": false, // Allow dot notation for better DX (changed from true)
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    // 完全禁止any类型 - 零容忍策略
    // noImplicitAny已在strict模式中启用，这里注释说明策略
    // 模块解析
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // 严格模块语法 - 配合import type转换优化构建输出
    "verbatimModuleSyntax": true,
    // 路径映射 - 统一使用单一别名符合规则要求
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // Next.js插件
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    // === 备份文件排除 - 避免备份文件被TypeScript检查 ===
    "backups/**/*",
    // === 开发工具豁免 - 仅开发环境使用，不影响生产代码质量 ===
    // 开发者工具面板和调试插件
    "src/components/dev-tools/**/*.ts",
    "src/components/dev-tools/**/*.tsx",
    "src/app/[locale]/dev-tools/**/*.ts",
    "src/app/[locale]/dev-tools/**/*.tsx",
    "src/app/[locale]/react-scan-demo/**/*.ts",
    "src/app/[locale]/react-scan-demo/**/*.tsx",
    "src/app/[locale]/diagnostics/**/*.ts",
    "src/app/[locale]/diagnostics/**/*.tsx",
    "src/lib/dev-tools-positioning.ts",
    "src/lib/performance-monitoring-coordinator.ts",
    "src/lib/react-scan-config.ts",
    // 测试文件和测试工具
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "src/testing/**/*.ts",
    "src/testing/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.tsx",
    "__mocks__/**/*.js",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    // 构建脚本和配置文件
    "scripts/**/*.ts",
    "scripts/**/*.js",
    "config/**/*.ts",
    "config/**/*.js",
    "*.config.ts",
    "*.config.js",
    "*.config.mjs",
    "instrumentation*.ts",
    // 开发环境特定常量
    "src/constants/dev-tools.ts",
    "src/constants/test-*.ts"
  ]
}
