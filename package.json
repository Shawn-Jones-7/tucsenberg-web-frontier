{
  "name": "tucsenberg-web-frontier",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20 <21",
    "pnpm": ">=10.13.1 <11"
  },
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:no-turbo": "next dev",
    "prebuild": "node scripts/copy-translations.js",
    "build": "next build",
    "start": "next start",
    "test": "vitest run",
    "prepare": "git rev-parse --git-dir > /dev/null 2>&1 && lefthook install || true",
    "type-check": "tsc --noEmit",
    "validate:translations": "node scripts/validate-translations.js",
    "split:translations": "node scripts/split-translations.js",
    "type-check:tests": "tsc --noEmit -p tsconfig.test.json",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --config eslint.config.mjs --cache --cache-location .eslintcache",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --config eslint.config.mjs --fix --cache --cache-location .eslintcache",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "size:check": "size-limit",
    "build:check": "next build --no-lint",
    "commitlint": "commitlint",
    "hooks:install": "lefthook install",
    "arch:check": "dependency-cruiser src --config .dependency-cruiser.js",
    "circular:check": "madge --circular --extensions ts,tsx src",
    "security:audit": "pnpm audit --audit-level moderate",
    "i18n:validate:code": "tsx scripts/validate-i18n-content.ts",
    "i18n:validate:visual": "tsx scripts/validate-i18n-visual.ts",
    "i18n:shape:check": "node scripts/i18n-shape-check.js",
    "unused:check": "knip",
    "unused:fix": "knip --fix",
    "unused:production": "knip --production",
    "scan:translations": "node scripts/translation-scanner.js",
    "sync:translations:enhanced": "node scripts/translation-sync.js",
    "validate:translations:legacy": "node scripts/translation-validator.js",
    "i18n:sync:check": "node scripts/translation-validator.js",
    "i18n:full": "pnpm scan:translations && pnpm sync:translations:enhanced && pnpm validate:translations",
    "quality:monitor": "node scripts/quality-monitor.js",
    "quality:report:local": "node scripts/quality-monitor.js && open reports/quality/latest-quality-summary.json",
    "quality:gate": "node scripts/quality-gate.js",
    "quality:quick:staged": "node scripts/quality-quick-staged.js",
    "arch:metrics": "node scripts/architecture-metrics.js",
    "transform:barrel": "node scripts/transform-barrel-exports.js",
    "transform:barrel:dry": "node scripts/transform-barrel-exports.js --dry-run",
    "codemod:mn:ast": "tsx scripts/magic-numbers/ast-replace-magic-numbers.ts --write",
    "codemod:mn:precheck": "tsx scripts/magic-numbers/preflight.ts",
    "codemod:mn:batch": "tsx scripts/magic-numbers/run-batch.ts",
    "test:codemods": "vitest run -c scripts/vitest.config.ts",
    "ci:quality": "pnpm run type-check && pnpm run lint:check && pnpm run quality:gate",
    "ci:metrics": "pnpm run arch:metrics",
    "perf:check": "pnpm run size:check",
    "config:check": "node scripts/check-config-consistency.js",
    "eslint:disable:check": "node scripts/check-eslint-disable-usage.js",
    "test:e2e:no-reuse": "CI=1 pnpm test:e2e",
    "test:e2e:ci-local": "CI=1 pnpm test:e2e",
    "ci:local": "bash scripts/ci-local.sh",
    "ci:local:quick": "bash scripts/ci-local.sh --quick",
    "ci:local:fix": "pnpm format:write && pnpm lint:fix && echo '✅ 自动修复完成，请重新运行 pnpm ci:local'"
  },
  "dependencies": {
    "@marsidev/react-turnstile": "^1.3.0",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.5.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/nextjs": "10.21.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/typography": "^0.5.16",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "airtable": "0.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "8.6.0",
    "geist": "1.4.2",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.542.0",
    "next": "15.5.4",
    "next-intl": "4.3.4",
    "next-sitemap": "4.2.3",
    "next-themes": "0.4.6",
    "nextjs-toploader": "^3.8.16",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "resend": "6.0.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "5.0.3",
    "whatsapp": "0.0.5-Alpha",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.0",
    "@babel/traverse": "^7.28.0",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "^9.33.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "15.5.3",
    "@next/eslint-plugin-next": "15.5.3",
    "@playwright/test": "^1.56.1",
    "@sentry/cli": "~2.52.0",
    "@size-limit/file": "^11.2.0",
    "@tailwindcss/postcss": "4.1.11",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "20.19.9",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "axe-core": "^4.10.3",
    "axe-playwright": "^2.1.0",
    "concurrently": "^9.2.0",
    "cssnano": "^7.1.1",
    "dependency-cruiser": "17.0.1",
    "dotenv": "^17.2.1",
    "eslint": "9.32.0",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-you-might-not-need-an-effect": "0.6.1",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-security-node": "1.1.4",
    "glob": "^11.0.3",
    "happy-dom": "^20.0.2",
    "husky": "9.1.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "knip": "^5.64.1",
    "lefthook": "1.12.2",
    "lighthouse": "^12.8.1",
    "madge": "8.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.8",
    "react-scan": "^0.0.42",
    "sharp": "^0.34.3",
    "size-limit": "11.2.0",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "ts-morph": "^27.0.0",
    "tsx": "^4.20.5",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.0",
    "vitest": "3.2.4"
  },
  "pnpm": {
    "overrides": {
      "playwright@<1.55.1": ">=1.56.1",
      "vite@>=7.1.0 <7.1.11": ">=7.1.11",
      "tmp": "0.2.4"
    },
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "@tailwindcss/oxide",
      "@vercel/speed-insights",
      "esbuild",
      "lefthook",
      "oxc-resolver",
      "sharp",
      "unrs-resolver"
    ]
  }
}
